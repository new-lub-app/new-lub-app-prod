                const buttons = document.querySelectorAll('.btn-primary, .btn-secondary');

                buttons.forEach(button => {
                    button.addEventListener('click', function(e) {
                        // Cr√©er l'effet ripple
                        const ripple = document.createElement('span');
                        const rect = this.getBoundingClientRect();
                        const size = Math.max(rect.width, rect.height);
                        const x = e.clientX - rect.left - size / 2;
                        const y = e.clientY - rect.top - size / 2;

                        ripple.style.cssText = `
                    position: absolute;
                    width: ${size}px;
                    height: ${size}px;
                    left: ${x}px;
                    top: ${y}px;
                    background: rgba(255, 255, 255, 0.3);
                    border-radius: 50%;
                    transform: scale(0);
                    animation: ripple 0.6s ease-out;
                    pointer-events: none;
                `;

                        this.appendChild(ripple);

                        setTimeout(() => {
                            ripple.remove();
                        }, 600);
                    });
                });
            }

            // 7. ANIMATION POUR LES ONGLETS DE SERVICE
            function enhanceServiceTabs() {
                const tabButtons = document.querySelectorAll('.service .nav .nav-link');

                tabButtons.forEach(button => {
                    button.addEventListener('click', function() {
                        // Supprimer l'indicateur des autres onglets
                        tabButtons.forEach(btn => btn.classList.remove('tab-indicator'));
                        // Ajouter l'indicateur au bouton actif
                        this.classList.add('tab-indicator');
                    });
                });
            }

            // 8. SMOOTH SCROLL POUR LES LIENS D'ANCRE
            function enableSmoothScroll() {
                document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                    anchor.addEventListener('click', function(e) {
                        e.preventDefault();
                        const target = document.querySelector(this.getAttribute('href'));
                        if (target) {
                            target.scrollIntoView({
                                behavior: 'smooth',
                                block: 'start'
                            });
                        }
                    });
                });
            }

            // INITIALISER TOUTES LES ANIMATIONS
            addScrollAnimations();
            handleNavbarScroll();
            animateCounters();
            handleParallax();
            enhanceFormAnimations();
            enhanceButtons();
            enhanceServiceTabs();
            enableSmoothScroll();

            console.log('üé® Animations New Lub activ√©es !');
        });

        // CSS pour l'effet ripple (√† ajouter au CSS)
        const rippleCSS = `
@keyframes ripple {
    to {
        transform: scale(4);
        opacity: 0;
    }
}
`;

        // Injecter le CSS pour l'effet ripple
        const style = document.createElement('style');
        style.textContent = rippleCSS;
        document.head.appendChild(style);

    </script>

