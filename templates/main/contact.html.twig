{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}

    <!-- Page Header Start -->
    <div class="container-fluid page-header mb-5 p-0" style="background-image: url(../img/carousel-bg-1.jpg);">
        <div class="container-fluid page-header-inner py-5">
            <div class="container text-center">
                <h1 class="display-3 text-white mb-3 animated slideInDown">Contact</h1>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb justify-content-center text-uppercase">
                        <li class="breadcrumb-item"><a href="{{ path('app_main') }}" style="color:#FFD700">Accueil</a></li>
                        <li class="breadcrumb-item text-white active" aria-current="page">Contact</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
    <!-- Page Header End -->

    <!-- Contact Start -->
    <div class="container-xxl py-5">
        <div class="container">
            <div class="text-center wow fadeInUp mb-5" data-wow-delay="0.1s">
                <h1 class="mb-5">Contactez-nous</h1>
                <h5 class="mb-5">info@new-lub.com</h5>

            </div>
            <div class="row g-4">

                <div class="col-md-6 wow fadeIn" data-wow-delay="0.1s">
                    <iframe class="position-relative rounded w-100 h-100"
                            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3001156.4288297426!2d-78.01371936852176!3d42.72876761954724!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x4ccc4bf0f123a5a9%3A0xddcfc6c1de189567!2sNew%20York%2C%20USA!5e0!3m2!1sen!2sbd!4v1603794290143!5m2!1sen!2sbd"
                            frameborder="0"
                            style="min-height: 350px; border:0;" allowfullscreen="" aria-hidden="false"
                            tabindex="0">
                    </iframe>
                </div>
                <div class="col-md-6">
                    <div class="wow fadeInUp" data-wow-delay="0.2s">
                        <p class="mb-4"><b>Vous avez une question ? Remplissez le formulaire ci-dessous.</b></p>
                        {% for label, messages in app.flashes %}
                            {% for message in messages %}
                                <div class="alert alert-info">
                                    <i class="fa fa-info-circle me-2"></i>
                                    {{ message }}
                                </div>


                            {% endfor %}
                        {% endfor %}
                        {{ form_start(form, {'attr': {'class': 'row g-3'}}) }}

                        <div class="col-md-6">
                            <div class="form-floating">
                                {{ form_widget(form.firstname, {'attr': {'class': 'form-control', 'placeholder': 'Prénom'}}) }}
                                {{ form_label(form.firstname, 'Prénom') }}
                                {{ form_errors(form.firstname) }}
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-floating">
                                {{ form_widget(form.lastname, {'attr': {'class': 'form-control', 'placeholder': 'Nom'}}) }}
                                {{ form_label(form.lastname, 'Nom') }}
                                {{ form_errors(form.lastname) }}
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-floating">
                                {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Email'}}) }}
                                {{ form_label(form.email, 'Email') }}
                                {{ form_errors(form.email) }}
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-floating">
                                {{ form_widget(form.phoneNumber, {'attr': {'class': 'form-control', 'placeholder': 'Téléphone'}}) }}
                                {{ form_label(form.phoneNumber, 'Téléphone') }}
                                {{ form_errors(form.phoneNumber) }}
                            </div>
                        </div>

                        <div class="col-12">
                            <div class="form-floating">
                                {{ form_widget(form.message, {'attr': {'class': 'form-control', 'style': 'height: 120px', 'placeholder': 'Votre message'}}) }}
                                {{ form_label(form.message, 'Message') }}
                                {{ form_errors(form.message) }}
                            </div>
                        </div>

                        <div class="col-12">
                            <button class="btn btn-primary w-100 py-3" type="submit">Envoyer</button>
                        </div>

                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Contact End -->

{% endblock %}
