{% extends 'base.html.twig' %}

{% block title %}Nos Produits - New Lub{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Filtres et recherche */
        .product-filters {
            background: linear-gradient(135deg, rgba(0, 86, 179, 0.05), rgba(255, 215, 0, 0.05));
            border-radius: 10px;
            padding: 25px;
            margin-bottom: 30px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
            border-left: 4px solid var(--secondary);
        }

        .filter-title {
            color: var(--primary);
            font-weight: 700;
            margin-bottom: 20px;
            position: relative;
            padding-bottom: 10px;
        }

        .filter-title::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 50px;
            height: 3px;
            background: var(--secondary);
        }

        .filter-group {
            margin-bottom: 20px;
        }

        .filter-group h5 {
            color: var(--dark);
            font-weight: 600;
            margin-bottom: 12px;
            font-size: 16px;
        }

        .form-check-label {
            color: var(--dark);
            cursor: pointer;
            transition: all 0.3s;
        }

        .form-check-input:checked ~ .form-check-label {
            color: var(--primary);
            font-weight: 600;
        }

        .price-range {
            padding: 10px 0;
        }

        .price-slider {
            -webkit-appearance: none;
            width: 100%;
            height: 5px;
            border-radius: 5px;
            background: #ddd;
            outline: none;
        }

        .price-slider::-webkit-slider-thumb {
            -webkit-appearance: none;
            appearance: none;
            width: 20px;
            height: 20px;
            border-radius: 50%;
            background: var(--secondary);
            cursor: pointer;
            border: 2px solid white;
            box-shadow: 0 0 5px rgba(0, 0, 0, 0.2);
        }

        .price-values {
            display: flex;
            justify-content: space-between;
            margin-top: 10px;
            color: var(--dark);
            font-size: 14px;
        }

        /* Grille de produits */
        .product-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
            gap: 25px;
            margin-bottom: 40px;
        }

        .product-card {
            background: white;
            border-radius: 12px;
            overflow: hidden;
            transition: all 0.4s ease;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
            position: relative;
            height: 100%;
            display: flex;
            flex-direction: column;
        }

        .product-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 30px rgba(0, 86, 179, 0.15);
        }

        .product-badge {
            position: absolute;
            top: 15px;
            left: 15px;
            background: var(--secondary);
            color: var(--dark);
            padding: 5px 12px;
            border-radius: 20px;
            font-weight: 700;
            font-size: 12px;
            z-index: 2;
            box-shadow: 0 3px 10px rgba(0, 0, 0, 0.1);
        }

        .product-image {
            height: 220px;
            overflow: hidden;
            position: relative;
        }

        .product-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.5s ease;
        }

        .product-card:hover .product-image img {
            transform: scale(1.1);
        }

        .product-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 86, 179, 0.7);
            display: flex;
            align-items: center;
            justify-content: center;
            opacity: 0;
            transition: opacity 0.4s ease;
        }

        .product-card:hover .product-overlay {
            opacity: 1;
        }

        .product-actions {
            display: flex;
            gap: 10px;
        }

        .product-action-btn {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background: white;
            display: flex;
            align-items: center;
            justify-content: center;
            color: var(--primary);
            transition: all 0.3s;
            transform: translateY(20px);
            opacity: 0;
        }

        .product-card:hover .product-action-btn {
            transform: translateY(0);
            opacity: 1;
        }

        .product-action-btn:hover {
            background: var(--secondary);
            color: var(--dark);
            transform: scale(1.1);
        }

        .product-info {
            padding: 20px;
            flex-grow: 1;
            display: flex;
            flex-direction: column;
        }

        .product-category {
            color: #777;
            font-size: 12px;
            text-transform: uppercase;
            letter-spacing: 1px;
            margin-bottom: 8px;
        }

        .product-title {
            font-size: 18px;
            font-weight: 700;
            color: var(--dark);
            margin-bottom: 10px;
            line-height: 1.3;
        }

        .product-description {
            color: #666;
            font-size: 14px;
            margin-bottom: 15px;
            flex-grow: 1;
        }

        .product-rating {
            display: flex;
            align-items: center;
            margin-bottom: 15px;
        }

        .product-stars {
            color: var(--secondary);
            margin-right: 8px;
        }

        .product-review-count {
            color: #777;
            font-size: 13px;
        }

        .product-price {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-top: auto;
        }

        .price {
            font-weight: 700;
            color: var(--primary);
            font-size: 20px;
        }

        .price-original {
            color: #999;
            text-decoration: line-through;
            font-size: 14px;
            margin-left: 8px;
        }

        .add-to-cart-btn {
            background: var(--primary);
            color: white;
            border: none;
            padding: 8px 15px;
            border-radius: 5px;
            font-weight: 600;
            font-size: 14px;
            transition: all 0.3s;
            display: flex;
            align-items: center;
            gap: 5px;
        }

        .add-to-cart-btn:hover {
            background: var(--secondary);
            color: var(--dark);
            transform: translateY(-2px);
        }

        /* Pagination */
        .product-pagination {
            display: flex;
            justify-content: center;
            margin-top: 40px;
        }

        .page-link {
            color: var(--primary);
            border: 1px solid #ddd;
            padding: 10px 18px;
            margin: 0 5px;
            border-radius: 5px;
            transition: all 0.3s;
        }

        .page-link:hover,
        .page-item.active .page-link {
            background: var(--primary);
            color: white;
            border-color: var(--primary);
        }

        /* Options d'affichage et tri */
        .display-options {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 25px;
            padding: 15px 20px;
            background: white;
            border-radius: 8px;
            box-shadow: 0 3px 10px rgba(0, 0, 0, 0.05);
        }

        .result-count {
            color: var(--dark);
            font-weight: 500;
        }

        .sort-options select {
            border: 1px solid #ddd;
            padding: 8px 15px;
            border-radius: 5px;
            color: var(--dark);
            outline: none;
            cursor: pointer;
        }

        .view-options {
            display: flex;
            gap: 10px;
        }

        .view-btn {
            width: 38px;
            height: 38px;
            border-radius: 5px;
            border: 1px solid #ddd;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #777;
            transition: all 0.3s;
            background: white;
        }

        .view-btn.active,
        .view-btn:hover {
            background: var(--primary);
            color: white;
            border-color: var(--primary);
        }

        /* Responsive */
        @media (max-width: 992px) {
            .product-grid {
                grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
            }
        }

        @media (max-width: 768px) {
            .display-options {
                flex-direction: column;
                gap: 15px;
                align-items: flex-start;
            }

            .view-options {
                align-self: flex-end;
            }
        }

        @media (max-width: 576px) {
            .product-grid {
                grid-template-columns: 1fr;
            }

            .product-image {
                height: 200px;
            }
        }

        /* Animation pour le chargement des produits */
        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .product-card {
            animation: fadeIn 0.5s ease-out;
        }

        .product-card:nth-child(2) {
            animation-delay: 0.1s;
        }

        .product-card:nth-child(3) {
            animation-delay: 0.2s;
        }

        .product-card:nth-child(4) {
            animation-delay: 0.3s;
        }

        .product-card:nth-child(5) {
            animation-delay: 0.4s;
        }

        .product-card:nth-child(6) {
            animation-delay: 0.5s;
        }
    </style>
{% endblock %}

