    <style>
        /* Animation fade pour le carousel - Compatible avec votre thème New Lub */
        .carousel-fade {
            position: relative;
        }

        .carousel-fade .carousel-item {
            opacity: 0;
            transition: opacity 1.5s ease-in-out;
            transform: none;
        }

        .carousel-fade .carousel-item.active,
        .carousel-fade .carousel-item-next.carousel-item-left,
        .carousel-fade .carousel-item-prev.carousel-item-right {
            opacity: 1;
        }

        .carousel-fade .carousel-item-next,
        .carousel-fade .carousel-item-prev {
            transform: none;
        }

        /* Indicateurs personnalisés avec vos couleurs */
        .carousel-indicators {
            bottom: 30px;
            z-index: 15;
        }

        .carousel-indicators [data-bs-target] {
            width: 15px;
            height: 15px;
            border-radius: 50%;
            background-color: rgba(255, 255, 255, 0.5);
            border: 2px solid transparent;
            transition: all 0.4s ease;
            margin: 0 8px;
        }

        .carousel-indicators [data-bs-target].active {
            background-color: var(--secondary);
            border-color: white;
            transform: scale(1.3);
            box-shadow: 0 0 15px rgba(255, 215, 0, 0.6);
        }

        .carousel-indicators [data-bs-target]:hover {
            background-color: rgba(255, 215, 0, 0.8);
            transform: scale(1.1);
        }

        /* Amélioration des contrôles avec vos couleurs */
        .carousel-control-prev,
        .carousel-control-next {
            width: 8%;
            opacity: 0.7;
            transition: all 0.3s ease;
            z-index: 15;
        }

        .carousel-control-prev:hover,
        .carousel-control-next:hover {
            opacity: 1;
            transform: scale(1.1);
        }

        .carousel-control-prev-icon,
        .carousel-control-next-icon {
            width: 3.5rem;
            height: 3.5rem;
            background-size: 60%;
            border-radius: 50%;
            background-color: rgba(0, 86, 179, 0.8);
            border: 3px solid var(--secondary);
            transition: all 0.3s ease;
        }

        .carousel-control-prev:hover .carousel-control-prev-icon,
        .carousel-control-next:hover .carousel-control-next-icon {
            background-color: var(--secondary);
            border-color: var(--primary);
            box-shadow: 0 0 20px rgba(255, 215, 0, 0.5);
        }

        /* Animation personnalisée pour les éléments du carousel */
        @keyframes slideInDown {
            0% {
                opacity: 0;
                transform: translateY(-50px);
            }
            100% {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @keyframes fadeInUp {
            0% {
                opacity: 0;
                transform: translateY(30px);
            }
            100% {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @keyframes zoomIn {
            0% {
                opacity: 0;
                transform: scale(0.8);
            }
            100% {
                opacity: 1;
                transform: scale(1);
            }
        }

        .animated {
            animation-duration: 1s;
            animation-fill-mode: both;
        }

        .slideInDown {
            animation-name: slideInDown;
            animation-delay: 0.3s;
        }

        .fadeInUp {
            animation-name: fadeInUp;
            animation-delay: 0.6s;
        }

        .zoomIn {
            animation-name: zoomIn;
            animation-delay: 0.9s;
        }

        /* Réinitialisation des animations pour chaque slide */
        .carousel-item:not(.active) .animated {
            animation: none;
            opacity: 0;
            transform: translateY(30px);
        }

        .carousel-item.active .animated {
            animation-delay: 0.3s;
        }

        .carousel-item.active .slideInDown {
            animation-name: slideInDown;
        }

        .carousel-item.active .fadeInUp {
            animation-name: fadeInUp;
        }

        .carousel-item.active .zoomIn {
            animation-name: zoomIn;
        }

        /* Effet de particules lumineux sur les boutons */
        .carousel-caption .btn {
            position: relative;
            overflow: hidden;
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
        }

        .carousel-caption .btn::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
            transition: left 0.8s ease;
        }

        .carousel-caption .btn:hover::before {
            left: 100%;
        }

        /* Amélioration responsive */
        @media (max-width: 768px) {
            .carousel-indicators {
                bottom: 15px;
            }

            .carousel-indicators [data-bs-target] {
                width: 12px;
                height: 12px;
                margin: 0 5px;
            }

            .carousel-control-prev-icon,
            .carousel-control-next-icon {
                width: 2.5rem;
                height: 2.5rem;
            }

            .carousel-caption h1 {
                font-size: 2rem !important;
            }

            .carousel-caption p {
                font-size: 1rem !important;
            }
        }

        /* Amélioration du gradient d'overlay */
        .carousel-caption {
            background: linear-gradient(135deg, rgba(0, 86, 179, 0.8), rgba(0, 0, 0, 0.6));
            backdrop-filter: blur(2px);
        }

        /* Animation de pulsation pour les éléments importants */
        @keyframes pulse-glow {
            0%, 100% {
                box-shadow: 0 0 5px rgba(255, 215, 0, 0.5);
            }
            50% {
                box-shadow: 0 0 20px rgba(255, 215, 0, 0.8), 0 0 30px rgba(255, 215, 0, 0.6);
            }
        }

        .carousel-indicators [data-bs-target].active {
            animation: pulse-glow 2s infinite ease-in-out;
        }
    </style>
{% endblock %}
